@font-face {
  font-family: 'icomoon';
  src:  url('../src/fonts/icons/icomoon.eot');
  src:  url('../src/fonts/icons/icomoon.eot') format('embedded-opentype'),
    url('../src/fonts/icons/icomoon.ttf') format('truetype'),
    url('../src/fonts/icons/icomoon.woff') format('woff'),
    url('../src/fonts/icons/icomoon.svg') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}


body 
    font-family: 'Open Sans', sans-serif

header
    background #03045E


header
    .option:hover
        background: #3b438b
    button
        .sign-icon:before
            font-family: 'icomoon';
            content: '\e971'
    .sign
        button
            background: #006ce0

main 
    background: white
    .card
        box-shadow: 4px 9px 20px 0px rgba(0,0,0,0.75)
        border: 1px solid #03045E
    .results
        display none
        p
            animation: append-animate .3s linear;

    .table-container
        .th
            font-weight: bold
            font-size: 1.3em
            display: flex
            justify-content: center
            align-items: center
            flex: 1
        .tr
            display: flex
            font-size: 1.1em
            justify-content: center
            align-items: center
            flex: 1
        .tr:last-child
            justify-content: center
            button
                margin: 0 10px
    .delete:before
        font-family: 'icomoon';
        content: '\e900'
    .use:before
        font-family: 'icomoon';
        content: '\ea03'
        
                    
                
@keyframes append-animate {
	from {
		transform: scaleY(0);
		opacity: 0;
	}
	to {
		transform: scaleY(1);
		opacity: 1;
	}
}
